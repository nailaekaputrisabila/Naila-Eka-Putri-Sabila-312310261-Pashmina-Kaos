<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAD1D1"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#C29D9D"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:contentDescription="Back Button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PASHMINA BILA"
            android:textColor="#000000"
            android:background="#C29D9D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:contentDescription="Cart Button" />
    </LinearLayout>

    <!-- Product Image -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="207dp"
        android:layout_height="221dp"
        android:layout_marginLeft="225px"
        android:layout_marginTop="43px"
        android:contentDescription="Product Image"
        android:scaleType="centerCrop"
        android:src="@drawable/img_2" />

    <!-- Checkmark -->
    <ImageView
        android:id="@+id/checkMark"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_check_24"
        android:contentDescription="Checkmark Icon" />

    <!-- Thank You Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Terimakasih telah berbelanja di toko kami. InsyAllah toko kami amanah."
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold" />
</LinearLayout>
