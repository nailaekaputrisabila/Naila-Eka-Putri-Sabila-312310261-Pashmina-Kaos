<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAD2DC"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C29D9D"
        android:padding="8dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_alignParentStart="true"
            android:contentDescription="Back Button" />

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASHMINA BILA"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/cartButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:layout_alignParentEnd="true"
            android:contentDescription="Cart Button" />
    </RelativeLayout>

    <!-- Product Image -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="217dp"
        android:layout_height="244dp"
        android:layout_marginLeft="190px"
        android:layout_marginTop="43px"
        android:contentDescription="Product Image"
        android:scaleType="centerCrop"
        android:src="@drawable/img_2" />

    <!-- Price and Color -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 20.000"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_marginTop="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warna"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="1dp" />

    <!-- Color Selection -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:columnCount="2"
        android:layout_marginTop="1dp">

        <Button
            android:id="@+id/btnDarkGrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/white"
            android:text="1. Dark Grey"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnHitam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/white"
            android:text="2. Hitam"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnNavy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/white"
            android:layout_columnWeight="1"
            android:text="3. Navy"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnMilo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/white"
            android:text="4.Milo"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnSilver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/white"
            android:layout_columnWeight="1"
            android:text="5. Silver"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnTan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/white"
            android:text="6. Tan"
            android:textColor="@color/black" />
    </GridLayout>

    <!-- Quantity Adjustments -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginLeft="190dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/decreaseButton"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:backgroundTint="#D9D9D9"
            android:text="-"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            android:text="1"
            android:textSize="16sp" />

        <Button
            android:id="@+id/increaseButton"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:backgroundTint="#D9D9D9"
            android:text="+"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- Buy Now and Add to Cart Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="1dp">

        <Button
            android:id="@+id/btnBuyNow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/pink"
            android:text="Beli Sekarang"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tambah Keranjang"
            android:backgroundTint="@color/pinkpekat"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Product Description -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginTop="6dp"
        android:text=" Deskripsi Produk :
Ukuran Pashmina Size 180X60 cm
Pashmina berbahan kaos, dengan detail bahan adem tidak panas, tidak dengung,serta menyerap keringat. Sifat bahan pashmina strech dan lentur sehingga saat dipakai akan mengikuti bentuk kepala.

 Kode Pilihan Warna
 Kode 1. Dark Grey          Kode 4. Milo
 Kode 2. Hitam                Kode 5. Silver
 Kode 3. Navy                 Kode 6. Tan
"
        android:textColor="#000" />
</LinearLayout>
