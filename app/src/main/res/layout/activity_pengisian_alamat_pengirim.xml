<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8D7E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#C29D9D"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PASHMINA BILA"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                android:contentDescription="Cart" />
        </LinearLayout>

        <!-- Image Section -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="207dp"
            android:layout_height="221dp"
            android:layout_marginLeft="225px"
            android:layout_marginTop="43px"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop"
            android:src="@drawable/img_2" />

        <!-- Form -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi Pembeli > Metode Pengiriman > Metode Pembayaran"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="14sp" />

        <!-- Email -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#6C6A6A"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- Name -->
        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Lengkap"
            android:textColorHint="#6C6A6A"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- Dropdown for Province, City, Kecamatan -->
        <Spinner
            android:id="@+id/provinsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:prompt="@string/pilih_provinsi" />


        <Spinner
            android:id="@+id/kota_kabupaten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:prompt="@string/pilih_kota_kabupaten" />

        <Spinner
            android:id="@+id/kecamatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:prompt="@string/pilih_kecamatan" />


        <!-- Address -->
        <EditText
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat"
            android:textColorHint="#6C6A6A"
            android:textColor="@color/black"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- Phone -->
        <EditText
            android:id="@+id/telepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telepon"
            android:textColorHint="#6C6A6A"
            android:textColor="@color/black"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- Button -->
        <Button
            android:id="@+id/lanjutan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/pink"
            android:textColor="#FFF" />

    </LinearLayout>
</ScrollView>
