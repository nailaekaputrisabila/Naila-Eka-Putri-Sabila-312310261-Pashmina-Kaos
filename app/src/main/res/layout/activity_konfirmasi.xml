<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8C2C2"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#C29D9D"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:contentDescription="Back Button" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PASHMINA BILA"
                android:textColor="#000000"
                android:background="#C29D9D"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                android:contentDescription="Cart Button" />
        </LinearLayout>

        <!-- Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="207dp"
            android:layout_height="221dp"
            android:layout_marginLeft="225px"
            android:layout_marginTop="43px"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop"
            android:src="@drawable/img_2" />
        <!-- Steps -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Informasi Pembeli > Metode Pembayaran > Pengisian Alamat"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Payment Options -->
        <RadioGroup
            android:id="@+id/paymentMethodGroup"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/danaOption"
                android:layout_width="307dp"
                android:layout_height="78dp"
                android:buttonTint="#000000"
                android:drawableStart="@drawable/img_11"
                android:drawablePadding="8dp"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/bcaOption"
                android:layout_width="307dp"
                android:layout_height="78dp"
                android:buttonTint="#000000"
                android:drawableStart="@drawable/img_9"
                android:drawablePadding="8dp"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/codOption"
                android:layout_width="307dp"
                android:layout_height="99dp"
                android:buttonTint="#000000"
                android:drawableStart="@drawable/img_10"
                android:drawablePadding="8dp"
                android:textColor="#000000" />
        </RadioGroup>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#C29D9D"
            android:text="Lanjutkan"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
