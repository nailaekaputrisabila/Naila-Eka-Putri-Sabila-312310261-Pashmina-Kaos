<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/img_3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="350px"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Search"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#6C6A6A"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:src="@drawable/ic_baseline_search_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/homeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="HOME"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="LOGIN"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shopTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="SHOP"
        android:textColor="#000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hijabTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Hijab"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pashminaKaosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Pashmina Kaos"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pashminaJerseyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pashmina Jersey"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
