<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FADADD"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C29D9D"
            android:padding="8dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_alignParentStart="true"
                android:contentDescription="Back Button" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASHMINA BILA"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/cartButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                android:layout_alignParentEnd="true"
                android:contentDescription="Cart Button" />
        </RelativeLayout>

        <!-- Product Image Section -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="207dp"
            android:layout_height="221dp"
            android:layout_marginLeft="225px"
            android:layout_marginTop="43px"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop"
            android:src="@drawable/img_2" />

        <!-- Cart Items Section -->

        <!-- RecyclerView for Cart Items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <!-- Cart Button -->
        <ImageView
            android:id="@+id/cartButton2"
            android:layout_width="390dp"
            android:layout_height="152dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Cart Button"
            android:src="@drawable/ic_baseline_shopping_cart_24" />

        <!-- Navigation Section -->
        <TextView
            android:id="@+id/lupaPassword"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:padding="1dp"
            android:text="Kembali ke Home"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
